<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.AddNewTrainerActivity"
        android:id="@+id/relativeLayout2">
    <include
            layout="@layout/new_teacher_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/include7"/>
    <ScrollView
            android:layout_below="@+id/include7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/include7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints">
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="100dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_height="100dp">

                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/add_imgTrainer"
                        android:layout_gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Name"
                    android:ems="10"
                    android:id="@+id/edt_add_techName"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Position"
                    android:ems="10"
                    android:id="@+id/edt_add_techPosition"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/edt_add_techName"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/lin_trainer_dob"
                    android:orientation="horizontal"
                    android:layout_height="40dp">
                <TextView
                        android:id="@+id/text_view_date_2"
                        android:layout_width="280dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"/>

                <ImageButton
                        android:id="@+id/button_date_2"
                        android:layout_width="wrap_content"
                        android:src="@drawable/calendar1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_height="wrap_content"
                        android:text="Change Date"
                        android:background="@color/white"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:background="@drawable/straight"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">
            </View>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="NRC"
                    android:ems="10"
                    android:id="@+id/edt_add_techNrc"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Phone Number"
                    android:ems="10"
                    android:id="@+id/edt_add_techPhone" android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/edt_add_techNrc" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="@string/edt_hint_email"
                    android:ems="10"
                    android:id="@+id/edt_add_techEmail" android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/edt_add_techPhone" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Address"
                    android:ems="10"
                    android:id="@+id/edt_add_techAddress" android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/edt_add_techEmail" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"/>
            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:weightSum="3"
                    app:layout_constraintTop_toBottomOf="@+id/edt_add_techAddress"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp" android:id="@+id/trainer_group">

                <RadioButton
                        android:text="Male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/rdOne"/>
                <RadioButton
                        android:text="Female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/rdTwo"/>
                <RadioButton
                        android:text="Other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/rdThree"/>

            </RadioGroup>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Company Name"
                    android:ems="10"
                    android:id="@+id/edt_add_techCompany"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/trainer_group"
                    android:layout_marginTop="5dp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Course Name:"
                        android:textSize="18sp"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_height="wrap_content">
                    <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/t_course_spinner"
                            android:layout_marginTop="5dp"/>
                    <View
                            android:layout_width="250dp"
                            android:background="@drawable/straight"
                            android:layout_height="1dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp">

                    </View>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Batch Name:"
                        android:textSize="18sp"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="18dp"
                        android:layout_height="wrap_content">
                    <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/t_batch_spinner"
                            android:layout_marginTop="5dp"/>
                    <View
                            android:layout_width="250dp"
                            android:background="@drawable/straight"
                            android:layout_height="1dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp">

                    </View>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Track Name:"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="18dp"
                        android:layout_height="wrap_content">
                    <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/t_track_spinner"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"/>
                    <View
                            android:layout_width="250dp"
                            android:background="@drawable/straight"
                            android:layout_height="1dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp">
                    </View>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
            android:layout_alignParentRight="true"
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/btn_trainer_save"
            app:layout_constraintTop_toTopOf="@+id/include7"
            app:layout_constraintEnd_toEndOf="@+id/include7"
            android:textColor="@color/white"
            android:background="@drawable/add_button_press_state"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/include7"
    />
</RelativeLayout>