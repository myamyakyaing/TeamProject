<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.activities.TeacherProfileActivity">
    <include
            layout="@layout/teacher_profile"
            android:id="@+id/include3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/include3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/mix_color"
            android:id="@+id/linearLayout3">
    </LinearLayout>
    <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            app:cardCornerRadius="50dp"
            android:layout_height="100dp"
            tools:ignore="MissingConstraints"
            android:id="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout3" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout3">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/tza"
                android:id="@+id/imgTeacherProfile"/>
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/txtTeacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:hint="@string/nav_header_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>
    <ScrollView
            android:id="@+id/Scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgStudent1"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:tint="@color/main"
                        android:src="@drawable/work"/>
                <TextView
                        android:id="@+id/txtTechProfession"
                        android:hint="Profession"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textSize="20dp"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:layout_height="40dp"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgStudent3"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:tint="@color/main"
                        android:src="@drawable/address"/>
                <TextView
                        android:id="@+id/txtTechAddress"
                        android:hint="Address"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textSize="20dp"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:layout_height="40dp"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgStudent4"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:tint="@color/main"
                        android:src="@drawable/bd"/>
                <TextView
                        android:id="@+id/txtTechDob"
                        android:hint="Date of Birth"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:textSize="20dp"
                        android:layout_height="40dp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgStudent5"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:tint="@color/main"
                        android:src="@drawable/ic_phone_iphone_black_24dp"/>
                <TextView
                        android:id="@+id/txtTechPhone"
                        android:hint="Phone Number"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textSize="20dp"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:layout_height="40dp"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgOffice"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:tint="@color/main"
                        android:src="@drawable/office"/>
                <TextView
                        android:id="@+id/txtTechOffice"
                        android:hint="Company Name"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textSize="20dp"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:layout_height="40dp"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgNrc"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:tint="@color/main"
                        android:src="@drawable/nrc"/>
                <TextView
                        android:id="@+id/txtTechNrc"
                        android:hint="NRC"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textSize="20dp"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:layout_height="40dp"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgGender"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:tint="@color/main"
                        android:src="@drawable/gender"/>
                <TextView
                        android:id="@+id/txtTechGender"
                        android:hint="Gender"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:textSize="20dp"
                        android:layout_height="40dp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgTrack"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:tint="@color/main"
                        android:src="@drawable/track"/>
                <TextView
                        android:id="@+id/txtTechTrack"
                        android:hint="Track"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textSize="20dp"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:layout_height="40dp"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgBatch"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:tint="@color/main"
                        android:src="@drawable/batch"/>
                <TextView
                        android:id="@+id/txtTechBatch"
                        android:hint="Batch"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textSize="20dp"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:layout_height="40dp"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgStudent6"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:tint="@color/main"
                        android:src="@drawable/d_email"
                        android:layout_marginLeft="0dp"/>
                <TextView
                        android:id="@+id/txtTechEmail"
                        android:hint="Email"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:textSize="20dp"
                        android:layout_height="40dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>