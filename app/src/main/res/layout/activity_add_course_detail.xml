<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activities.AddCourseDetailActivity">
    <include layout="@layout/add_course_bar"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:id="@+id/include8"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Title"
            android:ems="10"
            android:id="@+id/editTextName"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/lin_start_date"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:layout_height="40dp">
        <TextView
                android:id="@+id/text_view_date"
                android:layout_width="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>

        <ImageButton
                android:id="@+id/buttonDate"
                android:layout_width="wrap_content"
                android:src="@drawable/calendar1"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:text="Change Date"
                android:background="@color/white"/>
    </LinearLayout>
    <View
            android:layout_width="160dp"
            android:background="@drawable/straight"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
    </View>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/lin_end_date"
            android:orientation="horizontal"
            android:layout_height="40dp">
        <TextView
                android:id="@+id/text_view_date_3"
                android:layout_width="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>

        <ImageButton
                android:id="@+id/buttonDate1"
                android:layout_width="wrap_content"
                android:src="@drawable/calendar1"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:text="Change Date"
                android:background="@color/white"/>
    </LinearLayout>
    <View
            android:layout_width="160dp"
            android:background="@drawable/straight"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
    </View>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
                android:text="Batch Name:"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/c_batch_spinner"
                    android:layout_marginTop="15dp"/>
            <View
                    android:layout_width="250dp"
                    android:background="@drawable/straight"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

            </View>
        </LinearLayout>
    </LinearLayout>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Teaching Day"
            android:ems="10"
            android:id="@+id/edt_teaching_day"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content">
        <Button
                android:text="Save"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/course_btn_save"
                app:layout_constraintStart_toStartOf="parent"
                android:textAllCaps="false"
                android:layout_marginRight="15dp"
                android:background="@drawable/small_button_press_state"/>
        <Button
                android:text="Cancle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textAllCaps="false"
                android:layout_marginLeft="15dp"
                android:id="@+id/course_btn_cancle"
                android:background="@drawable/small_button_press_state"/>
    </LinearLayout>
</LinearLayout>