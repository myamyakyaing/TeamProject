<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activities.AddNewStudentvaluationEActivity">
    <include layout="@layout/add_evaluation_bar"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:id="@+id/include12"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
        <TextView
                android:text="Enter Name:"
                android:textSize="18sp"
                android:layout_weight="0"
                android:fontFamily="@font/style_american"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_height="wrap_content">
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/e_std_spinner"
                    android:layout_marginTop="5dp"/>
            <View
                    android:layout_width="230dp"
                    android:background="@drawable/straight"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

            </View>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
        <TextView
                android:text="Batch Name:"
                android:textSize="18sp"
                android:layout_weight="0"
                android:fontFamily="@font/style_american"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_height="wrap_content">
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/e_batch_spinner"
                    android:layout_marginTop="5dp"/>
            <View
                    android:layout_width="230dp"
                    android:background="@drawable/straight"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

            </View>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
        <TextView
                android:text="Track Name:"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_weight="0"
                android:fontFamily="@font/style_american"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_height="wrap_content">
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/e_track_spinner"
                    android:layout_marginTop="5dp"/>
            <View
                    android:layout_width="230dp"
                    android:background="@drawable/straight"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

            </View>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
        <TextView
                android:text="Soft Skill:"
                android:textSize="18sp"
                android:layout_weight="0"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:fontFamily="@font/style_american"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_height="wrap_content">
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/e_soft_spinner"
                    android:layout_marginTop="5dp"/>
            <View
                    android:layout_width="230dp"
                    android:background="@drawable/straight"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp">

            </View>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
        <TextView
                android:text="Hard Skill :"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/style_american"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content">
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/e_hard_spinner"
                    android:layout_marginTop="5dp"/>
            <View
                    android:layout_width="230dp"
                    android:background="@drawable/straight"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp">

            </View>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
        <TextView
                android:text="Following Rule:"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:fontFamily="@font/style_american"
                android:textStyle="bold"
                android:layout_weight="0"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_height="wrap_content">
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/e_rile_spinner"
                    android:layout_marginTop="5dp"/>

            <View
                    android:layout_width="220dp"
                    android:background="@drawable/straight"
                    android:layout_height="1dp">

            </View>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
        <Button
                android:text="Save"
                android:id="@+id/e_btn_save"
                android:textAllCaps="false"
                android:background="@drawable/small_button_press_state"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Cancle"
                android:textAllCaps="false"
                android:background="@drawable/small_button_press_state"
                android:layout_marginLeft="10dp"
                android:id="@+id/e_btn_cancle"/>
    </LinearLayout>


</LinearLayout>