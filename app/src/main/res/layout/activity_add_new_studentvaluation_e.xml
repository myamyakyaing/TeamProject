<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.AddNewStudentvaluationEActivity">
    <include layout="@layout/add_evaluation_bar"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:id="@+id/include12"/>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputName"
                style="@style/EditText.OutlinedBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/colorBrand"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/include12"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:hint="Student Name"
                    android:inputType="textEmailAddress"
                    android:textAlignment="viewStart"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputEmail"
                style="@style/EditText.OutlinedBox1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/colorBrand"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/inputBatch"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:hint="Start Date"
                    android:inputType="textEmailAddress"
                    android:textAlignment="viewStart"/>
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/calendar"
                android:id="@+id/imageView7"
                app:layout_constraintEnd_toEndOf="@+id/inputEmail"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="@+id/inputEmail"
                tools:ignore="VectorDrawableCompat"/>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputPass"
                style="@style/EditText.OutlinedBox1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/colorBrand"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                android:layout_marginStart="30dp" android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/inputBatch"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:hint="End Date"
                    android:inputType="textEmailAddress"
                    android:textAlignment="viewStart"/>
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/calendar"
                android:id="@+id/imageView8"
                app:layout_constraintEnd_toEndOf="@+id/inputPass"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="@+id/inputPass"
                tools:ignore="VectorDrawableCompat"/>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputBatch"
                style="@style/EditText.OutlinedBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/colorBrand"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/inputDay"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextBatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:hint="Batch Number"
                    android:inputType="number"
                    android:textAlignment="viewStart"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputDay"
                style="@style/EditText.OutlinedBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/colorBrand"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/inputName"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:hint="Track Name"
                    android:inputType="textEmailAddress"
                    android:textAlignment="viewStart"/>
        </com.google.android.material.textfield.TextInputLayout>
    <Button
            android:text="Save"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/course_btn_save"
            android:textAllCaps="false"
            android:background="@drawable/round_layout"
            android:backgroundTint="@color/appColor"
            app:layout_constraintEnd_toStartOf="@+id/course_btn_cancle"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/f_radioGroup"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Cancle"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:id="@+id/course_btn_cancle"
            android:background="@drawable/round_layout"
            android:backgroundTint="@color/appColor"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/f_radioGroup"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/course_btn_save"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Soft Skill :"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputEmail" app:layout_constraintEnd_toStartOf="@+id/txtHardSkill"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/radioGroup"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView24" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/h_radioGroup" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp">

        <RadioButton
                android:text="Excellent"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/radioOne"/>
        <RadioButton
                android:text="Very Good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/radioTwo"/>
        <RadioButton
                android:text="Good"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/radioThree"/>
        <RadioButton
                android:text="Average"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/radioFour"/>
        <RadioButton
                android:text="Poor"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/radioFive"/>

    </RadioGroup>
    <TextView
            android:text="Hard Skill :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtHardSkill"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputPass"
            app:layout_constraintStart_toEndOf="@+id/textView24"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/txtFollowingRule"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/h_radioGroup"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtHardSkill"
            app:layout_constraintStart_toEndOf="@+id/radioGroup" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/f_radioGroup"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp">

        <RadioButton
                android:text="Excellent"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/h_radioOne"/>
        <RadioButton
                android:text="Very Good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/h_radioTwo"/>
        <RadioButton
                android:text="Good"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/h_radioThree"/>
        <RadioButton
                android:text="Average"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/h_radioFour"/>
        <RadioButton
                android:text="Poor"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/h_radioFive"/>

    </RadioGroup>
    <TextView
            android:text="Following Rule :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtFollowingRule"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputPass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtHardSkill"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/f_radioGroup"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtFollowingRule"
            app:layout_constraintStart_toEndOf="@+id/h_radioGroup" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp">

        <RadioButton
                android:text="Excellent"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/f_radioOne"/>
        <RadioButton
                android:text="Very Good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/f_radioTwo"/>
        <RadioButton
                android:text="Good"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/f_radioThree"/>
        <RadioButton
                android:text="Average"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/f_radioFour"/>
        <RadioButton
                android:text="Poor"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/f_radioFive"/>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>