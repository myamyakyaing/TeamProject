<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".ui.activities.MainProfileActivity">
    <include layout="@layout/login_profile_bar"
             android:id="@+id/include4"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/include4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#CDDC39"
            android:id="@+id/linearLayout2">
    </LinearLayout>
    <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            app:cardCornerRadius="50dp"
            android:layout_height="100dp"
            tools:ignore="MissingConstraints"
            android:id="@+id/cardView"
            android:background="#8BC34A"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/tza"
                android:id="@+id/imgMainProfile"/>
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/txtMainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:hint="@string/nav_header_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgPosition"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:tint="@color/main"
                    android:src="@drawable/work"/>
            <TextView
                    android:id="@+id/txtMainPosition"
                    android:hint="Profession"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/main"
                    android:background="@drawable/straight"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgOffice"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:tint="@color/main"
                    android:src="@drawable/office"/>
            <TextView
                    android:id="@+id/txtMainOffice"
                    android:hint="Company Name"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/main"
                    android:background="@drawable/straight"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgTechAddress"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:tint="@color/main"
                    android:src="@drawable/address"/>
            <TextView
                    android:id="@+id/txtMainAddress"
                    android:hint="Address"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/main"
                    android:background="@drawable/straight"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgTechDob"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:tint="@color/main"
                    android:src="@drawable/birthday"/>
            <TextView
                    android:id="@+id/txtMainDob"
                    android:hint="Date of Birth"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/main"
                    android:background="@drawable/straight"
                    android:textSize="20dp"
                    android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgTechPhone"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:tint="@color/main"
                    android:src="@drawable/phone"/>
            <TextView
                    android:id="@+id/txtMainPhone"
                    android:hint="Phone Number"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/main"
                    android:background="@drawable/straight"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgTechEmail"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:tint="@color/main"
                    android:src="@drawable/d_email"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtMainEmail"
                    android:hint="Email"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/main"
                    android:background="@drawable/straight"
                    android:textSize="20dp"
                    android:layout_height="40dp"/>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>