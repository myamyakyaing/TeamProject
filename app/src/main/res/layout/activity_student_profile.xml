<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.StudentProfileActivity">
    <include
            layout="@layout/student_profile"
            android:id="@+id/include3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
            android:layout_below="@+id/include3"
            android:id="@+id/Scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_height="200dp">
                <androidx.cardview.widget.CardView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        app:cardCornerRadius="50dp"
                        android:layout_height="100dp"
                        android:id="@+id/cardView1">
                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:srcCompat="@drawable/tza"
                            android:id="@+id/imgStdProfile1"/>
                </androidx.cardview.widget.CardView>
                <TextView
                        android:layout_below="@+id/cardView1"
                        android:id="@+id/txtStdName"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:fontFamily="@font/style_american"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:hint="@string/nav_header_title" tools:ignore="UnknownId"/>

            </RelativeLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgStudent1"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:tint="@color/main"
                        android:layout_gravity="center"
                        android:src="@drawable/work"/>
                <TextView
                        android:id="@+id/txtStdProfession"
                        android:hint="Profession"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/style_american"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textSize="20dp"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgStudent3"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:tint="@color/main"
                        android:src="@drawable/address"/>
                <TextView
                        android:id="@+id/txtStdAddress"
                        android:hint="Address"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textSize="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/style_american"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgStudent4"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:tint="@color/main"
                        android:src="@drawable/bd"/>
                <TextView
                        android:id="@+id/txtStdDob"
                        android:hint="Date of Birth"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/style_american"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgStudent5"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:tint="@color/main"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_phone_iphone_black_24dp"/>
                <TextView
                        android:id="@+id/txtStdPhone"
                        android:hint="Phone Number"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/style_american"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgNrc"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:tint="@color/main"
                        android:layout_gravity="center"
                        android:src="@drawable/nrc"/>
                <TextView
                        android:id="@+id/txtStdNrc"
                        android:hint="NRC"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/style_american"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgGender"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:tint="@color/main"
                        android:src="@drawable/gender"/>
                <TextView
                        android:id="@+id/txtStdGender"
                        android:hint="Gender"
                        android:fontFamily="@font/style_american"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgTrack"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:tint="@color/main"
                        android:src="@drawable/track"/>
                <TextView
                        android:id="@+id/txtStdTrack"
                        android:hint="Track"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textSize="20dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/style_american"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgBatch"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:tint="@color/main"
                        android:src="@drawable/batch"/>
                <TextView
                        android:id="@+id/txtStdBatch"
                        android:hint="Batch"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/style_american"
                        android:textColor="@color/main"
                        android:background="@drawable/straight"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgStudent6"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:tint="@color/main"
                        android:layout_gravity="center"
                        android:src="@drawable/d_email"
                        android:layout_marginLeft="0dp"/>
                <TextView
                        android:id="@+id/txtStdEmail"
                        android:hint="Email"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/main"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/straight"
                        android:fontFamily="@font/style_american"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>